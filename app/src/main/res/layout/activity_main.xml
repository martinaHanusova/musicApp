<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firts_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:background="@color/colorWhiteWithAlpha">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/paddingSmall"
            android:src="@drawable/ed"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeName"
                android:text="Ed Sheeran"
                android:layout_marginStart="@dimen/marginLeft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeAlbum"
                android:text="Devide"
                android:layout_marginStart="@dimen/marginLeft" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/iconMarginRight"
            android:textSize="@dimen/textSizeIcon"
            android:fontFamily="@font/fa_solid"
            android:text="&#xf105;"
            android:layout_marginEnd="@dimen/iconMarginRight" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:background="@color/colorWhiteWithAlpha">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/paddingSmall"
            android:src="@drawable/sia"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeName"
                android:text="Sia"
                android:layout_marginStart="@dimen/marginLeft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeAlbum"
                android:text="1000 Forms of Fear"
                android:layout_marginStart="@dimen/marginLeft" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/iconMarginRight"
            android:textSize="@dimen/textSizeIcon"
            android:fontFamily="@font/fa_solid"
            android:text="&#xf105;"
            android:layout_marginEnd="@dimen/iconMarginRight" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:background="@color/colorWhiteWithAlpha">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/paddingSmall"
            android:src="@drawable/taylor"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeName"
                android:text="Taylor Swift"
                android:layout_marginStart="@dimen/marginLeft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeAlbum"
                android:text="1989"
                android:layout_marginStart="@dimen/marginLeft" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/iconMarginRight"
            android:textSize="@dimen/textSizeIcon"
            android:fontFamily="@font/fa_solid"
            android:text="&#xf105;"
            android:layout_marginEnd="@dimen/iconMarginRight" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:background="@color/colorWhiteWithAlpha">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/paddingSmall"
            android:src="@drawable/bruno"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeName"
                android:text="Bruno Mars"
                android:layout_marginStart="@dimen/marginLeft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeAlbum"
                android:text="Unorthodox Jukebox"
                android:layout_marginStart="@dimen/marginLeft" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/iconMarginRight"
            android:textSize="@dimen/textSizeIcon"
            android:fontFamily="@font/fa_solid"
            android:text="&#xf105;"
            android:layout_marginEnd="@dimen/iconMarginRight" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifth_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:background="@color/colorWhiteWithAlpha">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/paddingSmall"
            android:src="@drawable/pink"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeName"
                android:text="Pink"
                android:layout_marginStart="@dimen/marginLeft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeAlbum"
                android:text="M!ssundaztood"
                android:layout_marginStart="@dimen/marginLeft" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/iconMarginRight"
            android:textSize="@dimen/textSizeIcon"
            android:fontFamily="@font/fa_solid"
            android:text="&#xf105;"/>


    </LinearLayout>
</LinearLayout>
</ScrollView>